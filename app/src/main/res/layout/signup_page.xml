<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/sign_up_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:id="@+id/signup"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/s_up_phone"
                android:hint="phone number"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_4_24"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/s_up_email"
                android:hint="email"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_4_24"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/s_up_password"
                android:hint="password"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_lock_person_24"
                android:inputType="textPassword"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

<!--            <EditText-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:id="@+id/s_up_conf_password"-->
<!--                android:hint="confirm password"-->
<!--                android:background="@drawable/custom_edittext"-->
<!--                android:drawableLeft="@drawable/baseline_lock_person_24"-->
<!--                android:inputType="textPassword"-->
<!--                android:drawablePadding="8dp"-->
<!--                android:padding="8dp"-->
<!--                android:textColor="@color/black"-->
<!--                android:textColorHighlight="@color/cardview_dark_background"-->
<!--                android:layout_marginTop="20dp"/>-->

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:spinnerMode="dropdown"
                android:id="@+id/dropdown_roles_s_up"
                android:entries="@array/roles"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:id="@+id/signup_btn"
                android:background="@color/purple"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already registered? Login here"
        android:textAlignment="center"
        android:padding="8dp"
        android:textSize="14sp"
        android:id="@+id/login_text"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/goto_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_gravity="center_horizontal" />


</LinearLayout>